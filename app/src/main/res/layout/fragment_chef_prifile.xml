<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back1">

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="279dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/background_shape1"
        android:orientation="vertical"
        android:padding="15dp"
        android:scrollbarSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="315dp"
            android:layout_height="154dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:padding="20dp"
            android:text="Add your own personalised menu items which you want to provide to your customers!"
            android:textAlignment="center"
            android:textColor="@color/Orange"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/post_dish"
            android:layout_width="150dp"
            android:layout_height="56dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="332dp"
            android:background="@color/Orange"
            android:shadowRadius="10"
            android:text="Post Dish"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>